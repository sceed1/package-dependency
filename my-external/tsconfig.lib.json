    "src/**/*.test.ts",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
  ],
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../my-internal/tsconfig.lib.json"
    }
  ]
}
